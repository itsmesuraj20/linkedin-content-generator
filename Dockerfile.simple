# Simple single-stage build for Railway
FROM eclipse-temurin:17-jdk

WORKDIR /app

# Install Maven
RUN apt-get update && apt-get install -y maven && rm -rf /var/lib/apt/lists/*

# Copy source
COPY pom.xml .
COPY src ./src

# Build
RUN mvn clean package -DskipTests

# Run
EXPOSE 8080
CMD ["java", "-Dserver.port=$PORT", "-Dspring.profiles.active=prod", "-jar", "target/content-generator-0.0.1-SNAPSHOT.jar"]
